# S002 to Azure PostgreSQL Sync - Configuration Template
# Copy this file to .env and fill in your credentials
# DO NOT commit .env to version control!

# S002 SQL Server (READ ONLY)
SQL_SERVER=192.168.50.14
SQL_DATABASE=GZCDB
SQL_USERNAME=production
SQL_PASSWORD=your_password_here
SQL_DRIVER={ODBC Driver 18 for SQL Server}

# Azure PostgreSQL (WRITE)
PG_HOST=gzcdevserver.postgres.database.azure.com
PG_DATABASE=gzc_platform
PG_USERNAME=mikael
PG_PASSWORD=your_password_here
PG_SSLMODE=require

# Sync Options
BATCH_SIZE=1000
SYNC_CASH_TRANSACTIONS=false
